<script>
    function CheckUserAvail()
    {
        var userName = $('#txtUserName').val();

        if (userName.trim() === '')
        {          
            return;
        }
        var masterData = {
            "UserName": userName
        };
        $.ajax({
            url: '@Url.Content("~/User/CheckUserNameExists")',
            type: "POST",
            data: masterData,
            success: function (result)
            {
                
                if (result > 0)
                {
                    
                    $.bootstrapGrowl("<i class='fa fa-exclamation-triangle' aria-hidden='true'></i> User Name Already Exist! Please try another.", {
                        type: 'warning',
                        align: 'center',
                        width: 'auto',
                        allow_dismiss: true,
                        delay: 10000
                    });                   
                    $("#spanUserName").hide();
                    $("#UserName").val('');
                    $('#txtUserName').val('');
                    $('#txtUserName').focus();
                }
                // You can add an else block here if you want to handle the case when result is 1
            },
            error: function (xhr, textStatus, errorThrown)
            {
                // Handle the error if the AJAX request fails
                console.error("Error checking username availability:", textStatus, errorThrown);
            }
        });
    }

