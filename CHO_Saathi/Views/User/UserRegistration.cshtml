    <section id="AboutSection">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6 col-lg-6">
                    <h4 class="Headingcolorbg">Add User</h4>
                </div>
                <div class="col-xl-6 col-lg-6">
                    <div class="pull-right">
                        <a asp-action="Registration" class="btn btn-primary backtodetailbutton">Back to List</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="Username" class="control-label">Username</label><span class="mandatory"> *</span>
                        <input asp-for="Username" required onchange="CheckUserAvail()" id="txtUserName" class="form-control" onblur="CheckUserAvail()"  />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label><span class="mandatory"> *</span>
                        <input asp-for="Password" required maxlength="20" placeholder="Enter password here(min- 6 charcater, max - 20)." class="form-control" type="password" onchange="CheckUserPasswordAvail()" id="txtPassword" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label><span class="mandatory"> *</span>
                        <input asp-for="Name" required maxlength="60" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="EmailId" class="control-label">Email</label><span class="mandatory"> *</span>
                        <input required asp-for="EmailId" onblur="CheckEmailAvail()" type="email" id="txtUserEmail" maxlength="60" placeholder="example@mail.com" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label">Contact</label><span class="mandatory"> *</span>
                        <input asp-for="MobileNo" maxlength="10" id="mobile" onblur="CheckmobileAvail()" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">Role</label><span class="mandatory"> *</span>
                        <select asp-for="RoleId" required class="form-control" asp-items="ViewBag.RoleId" onchange="setloctiontableflag()">
                            <option value="0">Select</option>
                        </select>
                    </div>
                </div>

            </div>

            <div>
                <div id="DVLoc" class="row">
                    <div class="col-md-6">
                        <div class="bg-white rounded-lg p-2 shadow" style="min-height: 51px;">
                            <label class="control-label">Location</label><span class="mandatory"> *</span>
                            <div class="pull-right">
                                <a class="btn btn-primary" style="color:white" onclick="setloctiontableflagfilter()">Select</a>
                            </div>
                            <div id="URjstreeFilter"></div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="bg-white rounded-lg p-2 shadow" style="min-height: 51px;">
                            <div id="URjstree2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="divLocation">
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">State</label><span class="mandatory"> *</span>
                        <select type="text"  id="StateId" class="form-control" asp-items="@ViewBag.StateID">
                            <option value="0">Select</option>
                        </select>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">District</label><span class="mandatory"> *</span>
                        <select type="text"  class="form-control" id="DistrictId" name="DistrictId">
                        </select>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Block</label><span class="mandatory"> *</span>
                        <select type="text"  class="form-control" id="BlockId" name="BlockId">
                        </select>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-4" id="divFaclity">
                    <div class="form-group">
                        <label class="control-label">Facility</label><span class="mandatory"> *</span>
                        <select type="text"  class="form-control" id="FacilityID" name="FacilityID" asp-items="@(new SelectList(string.Empty,"FacilityID","FacilityName"))">
                        </select>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4" id="divANM">
                    <div class="form-group">
                        <label class="control-label">ANM</label>
                        <select type="text"  class="form-control" id="ANMID" name="ANMID" asp-items="@(new SelectList(string.Empty,"ANMID","ANMName"))">
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-xs-12">
                    <input type="submit" value="Save" class="btn btn-success savebutton pull-right" />
                </div>
            </div>
        </div>
    </section>
    <input type="hidden" id="UserRoleID" value="@ViewBag.UserRoleID" />
    <input type="hidden" id="LocationDetailselectedItems" name="LocationDetailselectedItems" value="hdd" />
    <input type="hidden" id="LocationItems" name="LocationItems" value="hfdd" />
</form>
