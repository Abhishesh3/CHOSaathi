@model CHO_Saathi.Models.MstMenu

@{
    ViewData["Title"] = "Edit Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MenuId" />
 
    <input type="hidden" id="MenuParentIdHidden" name="MenuParentId" value="@Model.MenuParentId" />

    <section id="MenuSection">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid mt-4">

                    <div class="row">
                        <div class="col-xl-3 col-lg-3">
                            <div class="pagetitle">
                                <h1>Edit Menu</h1>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6">
                            <div class="alert alert-danger" style="font-size:14px" role="alert">
                                <div class="col-sm-12">
                                    NOTE : Fields marked with (*) are compulsory fields
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3">
                            <a asp-action="Index" class="btn btn-primary backtodetailbutton float-end">
                                <i class="fa-solid fa-angles-left"></i>&nbsp;Back to List
                            </a>
                        </div>
                    </div>


                    <div class="row mt-3">
                    
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Menu Type <sup class="text-danger">*</sup></label>
                                <select id="MenuType" class="form-control">
                                    <option value=""> Select Type </option>
                                    <option value="parent">Parent Menu</option>
                                    <option value="submenu">SubMenu</option>
                                </select>
                            </div>
                        </div>

                    
                        <div class="col-md-4" id="SubMenuDiv" style="display:none;">
                            <div class="form-group">
                                <label class="control-label">Parent Menu</label>
                                <select id="SubMenuSelect" asp-for="MenuParentId" asp-items="ViewBag.SubMenus" class="form-control">
                                    <option value="">Select</option>
                                </select>
                                <span asp-validation-for="MenuParentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Menu <sup class="text-danger">*</sup></label>
                                <input asp-for="Menu" class="form-control" maxlength="50" autocomplete="off" required />
                                <span asp-validation-for="Menu" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Controller <sup class="text-danger">*</sup></label>
                                <input asp-for="Controller" class="form-control" maxlength="30" autocomplete="off" required />
                                <span asp-validation-for="Controller" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Action <sup class="text-danger">*</sup></label>
                                <input asp-for="Action" class="form-control" maxlength="30" autocomplete="off" required />
                                <span asp-validation-for="Action" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Style Class</label>
                                <input asp-for="StyleClass" class="form-control" maxlength="50" autocomplete="off" />
                                <span asp-validation-for="StyleClass" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success float-end">
                                    <i class="fa-solid fa-floppy-disk"></i>&nbsp;Save
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</form>

<script>
    $(document).ready(function () {
        var currentType = "@(Model.MenuParentId == 0 ? "parent" : "submenu")";

        if (currentType === "parent") {
            $("#SubMenuDiv").hide();
            $("#MenuParentIdHidden").val(0); 
        }
        else if (currentType === "submenu") {
            $("#SubMenuDiv").show();
            $("#SubMenuSelect").prop("disabled", false);
            $("#MenuParentIdHidden").val($("#SubMenuSelect").val());
        }

        $("#MenuType").val(currentType);

        $("#MenuType").change(function () {
            var type = $(this).val();

            if (type === "parent") {
                $("#SubMenuDiv").hide();
                $("#MenuParentIdHidden").val(0); 
            }
            else if (type === "submenu") {
                $("#SubMenuDiv").show();
                $("#MenuParentIdHidden").val($("#SubMenuSelect").val());
            }
            else {
                $("#SubMenuDiv").hide();
                $("#MenuParentIdHidden").val("");
            }
        });

       
        $("#SubMenuSelect").change(function () {
            $("#MenuParentIdHidden").val($(this).val());
        });
    });
</script>
