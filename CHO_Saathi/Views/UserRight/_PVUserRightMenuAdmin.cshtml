                //     align: 'center',
                //     width: 'auto',
                //     allow_dismiss: true,
                //     delay: 10000
                // });
                alert("Updated Succesfully");
                var url = '@Url.Content("~/")' + "UserRight/AssignRightsToRole";
                window.location.href = url;
            },
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                alert(err.Message);
            }
        });
    }
