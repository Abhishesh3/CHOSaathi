@model CHO_Saathi.Models.Anm
@using Microsoft.AspNetCore.Http;
@{
    if (@Context.Session.GetString("SirjanID") == "1")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<section id="AboutSection">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <h4 class="Headingcolorbg">Delete ANM </h4>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="pull-right">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-xl-12 col-lg-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <h5 class="text-danger">Are you sure you want to delete this?</h5>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <label class="control-label">Provider Name</label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Anmname)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label"> Gender </label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Gender.Gender1)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label"> Age </label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Age)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label"> Email </label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.EmailId)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label">Mobile No</label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.MobileNo)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Anmid" />
                    <input type="submit" value="Delete" class="btn btn-danger pull-right" />
                </form>
            </div>
        </div>
    </div>
</section>

