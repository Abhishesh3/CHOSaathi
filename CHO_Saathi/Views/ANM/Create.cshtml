<script type="text/javascript">
    $('.show-password').click(function () {

        if ($(this).hasClass('fa-eye')) {

            $(this).removeClass('fa-eye');

            $(this).addClass('fa-eye-slash');

            $('.password-show').attr('type', 'text');

        } else {

            $(this).removeClass('fa-eye-slash');

            $(this).addClass('fa-eye');

            $('.password-show').attr('type', 'password');
        }
    });


    function limitInputLength(inputElement, maxLength) {
        inputElement.addEventListener("input", function () {
            if (inputElement.value.length > maxLength) {
                inputElement.value = inputElement.value.slice(0, maxLength);
            }
        });
    }


    var txtAgeInput = document.getElementById("PasswordID");
    limitInputLength(txtAgeInput, 40);

    var txtAgeInput = document.getElementById("txtAge");
    limitInputLength(txtAgeInput, 2);

    var ANMNameInput = document.getElementById("ANMNameID");
    limitInputLength(ANMNameInput, 50);

    var emailInput = document.getElementById("txtEMD");
    var maxLength = 150;
    var emailRegex = /^[A-Za-z0-9._%+-]+@@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
    emailInput.addEventListener("input", function () {

        if (emailInput.value.length > maxLength) {
            emailInput.value = emailInput.value.slice(0, maxLength);
        }
        if (!emailRegex.test(emailInput.value)) {
            emailInput.setCustomValidity("Invalid email format");
        } else {
            emailInput.setCustomValidity("");
        }
    });

</script>
