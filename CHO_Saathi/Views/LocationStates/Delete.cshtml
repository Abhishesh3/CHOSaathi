@model CHO_Saathi.Models.LocationState
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Delete State";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="AboutSection" class="mt-4 ms-4">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <h4 class="Headingcolorbg">Delete State</h4>
            </div>

            <div class="col-xl-6 col-lg-6 text-end">
                @* <a asp-action="Index" class="btn btn-primary backtodetailbutton">Back to List</a> *@
                <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-angles-left"></i>&nbsp;Back to List</a>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-xl-12 col-lg-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th colspan="2">
                                <h5 class="text-danger">Are you sure you want to delete this?</h5>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <label class="control-label">State</label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.StateName)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-xl-12 col-lg-12 text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="StateId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>&nbsp;Delete
                    </button>
                </form>
            </div>
        </div>

    </div>
</section>



