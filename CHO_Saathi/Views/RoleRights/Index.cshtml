@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xl-4">
                                <h4 class="Headingcolorbg">Role Wise Menu Assign</h4>
                            </div>
                            <div class="col-xl-4"></div>
                            <div class="col-xl-4">
                                <div class="input-group" style="cursor:pointer;">
                                    <span class="input-group-text" id="basic-addon2"><i class="fa-solid fa-users"></i></span>
                                    <select id="drpRole" class="form-control form-select" asp-items="ViewBag.RoleID">
                                        <option value="0">Select Roles</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                                <hr />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div id="div-role-rights"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function ()
    {
        $('#drpRole').on('change', function () {
            var drpVal = $('#drpRole').val();
            if (drpVal == "0")
            {
                  var url = '@Url.Content("~/")' + "RoleRights/Index";
                             window.location.href = url;
            }
            else
            {
                
            }
             var p = { "RoleId": drpVal };
            $.ajax({
                url: '@Url.Content("~/")' + "RoleRights/GetRoleRights", //Your path should be here
                type: "POST",
                data: p,
                success: function (result)
                {
                    $("#div-role-rights").html('');
                    $("#div-role-rights").html(result);
                },
                error: function (xhr, status, error) 
                {
                    var err = eval("(" + xhr.responseText + ")");
                    showAlert('danger', '', err.Message, '');
                }
            });

        });
    });
</script>



