@model CHO_Saathi.Models.LocationBlock
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Add New Block";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- ADD TOP & LEFT MARGIN -->
    <section id="AboutSection" class="mt-4 ms-4">

        <div class="container-fluid">

            <!-- HEADER ROW -->
            <div class="row">
                <div class="col-xl-3 col-lg-3">
                    <h4 class="Headingcolorbg">Add New Block</h4>
                </div>

                <div class="col-xl-6 col-lg-6">
                    <div class="alert alert-danger p-2" style="font-size:14px" role="alert">
                        NOTE : Fields marked with (*) are compulsory fields
                    </div>
                </div>

                <div class="col-xl-3 col-lg-3 text-end">
                    @* <a asp-action="Index" class="btn btn-primary backtodetailbutton">Back to List</a> *@
                    <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-angles-left"></i>&nbsp;Back to List</a>
                </div>
            </div>

            <!-- SEPARATOR -->
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <hr />
                </div>
            </div>

            <!-- FORM ROW 1 -->
            <div class="row">

                <!-- STATE -->
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">State</label><span class="mandatory"> *</span>
                        <select id="StateID" asp-for="StateId" asp-items="ViewBag.StateList" class="form-control">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>

                <!-- DISTRICT -->
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">District</label><span class="mandatory"> *</span>
                        <select asp-for="DistrictId" id="DistrictID" class="form-control" autocomplete="off" asp-items="ViewBag.DistrictID">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>

                <!-- BLOCK NAME -->
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Block</label><span class="mandatory"> *</span>
                        <input asp-for="BlockName" maxlength="50" required class="form-control" autocomplete="off" id="BlkID" />
                        <span asp-validation-for="BlockName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- FORM ROW 2 -->
            <div class="row mt-2">

                <!-- BLOCK CODE -->
                <div class="col-xl-4 col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Block Code</label><span class="mandatory"> *</span>
                        <input asp-for="BlockCode" maxlength="10" required class="form-control" id="BlkCode" />
                        <span asp-validation-for="BlockCode" class="text-danger"></span>
                    </div>
                </div>

                <!-- EMPTY COLUMNS TO MATCH DESIGN -->
                <div class="col-xl-4 col-lg-4"></div>
                <div class="col-xl-4 col-lg-4"></div>

            </div>

            <!-- SAVE BUTTON -->
            <div class="row mt-3">
                <div class="col-xl-12 text-end">
                    @* <input type="submit" value="Save" class="btn btn-success savebutton" /> *@
                    <button type="submit" class="btn btn-success float-end"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Save</button>
                </div>
            </div>

        </div>
    </section>

</form>

@if (TempData["message"] != null)
{
    <script>
        //alert('@TempData["message"]');
        $.bootstrapGrowl("<i class='fa fa-check-circle' aria-hidden='true'></i> @TempData["message"]", {
            type: 'info',
            align: 'center',
            width: 'auto',
            offset: { from: 'top', amount: 155 }, // 'top', or 'bottom'
            allow_dismiss: true,
            delay: 3000
        });
    </script>
}


<script type="text/javascript">
    $(document).ready(function () {
        $('#BlkID').keypress(function (e) {
            var regex = new RegExp("^[a-zA-Z ]+$");
            var strigChar = String.fromCharCode(!e.charCode ? e.which : e.charCode);
            if (regex.test(strigChar)) {
                return true;
            }
            return false
        });

        $('#BlkCode').on('keypress', function (event) {
            var regex = new RegExp("^[0-9]*$");
            var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
            if (!regex.test(key)) {
                event.preventDefault();
                return false;
            }
        });

    });

    $('#StateID').change(function () {
        var url = '@Url.Content("~/")' + "LocationBlocks/GetDistrict";
        var ddlsource = "#StateID";
        $.getJSON(url, { stateid: $(ddlsource).val() }, function (data) {
            var districtitems = "<option value='0'>Select</option>";
            $("#DistrictID").empty();
            $.each(data, function (i, district) {
                districtitems += "<option value='" + district.districtID + "'>" + district.district + "</option>";
            });
            $('#DistrictID').html(districtitems);
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        var dropdown = document.getElementById("DistrictID");
        // var dropdown = document.getElementById("DistrictId");
        var txtBlkID = document.getElementById("BlkID");
        var txtBlkCode = document.getElementById("BlkCode");
        txtBlkID.readOnly = true;
        txtBlkCode.readOnly = true;
        dropdown.addEventListener("change", function () {
            if (dropdown.value === "0") {
                txtBlkID.readOnly = true;
                txtBlkCode.readOnly = true;
            } else {
                txtBlkID.readOnly = false;
                txtBlkCode.readOnly = false;
            }
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        var districtCodeInput = document.getElementById("BlkCode");

        districtCodeInput.addEventListener("input", function () {
            var maxLength = 10;
            if (districtCodeInput.value.length > maxLength) {
                districtCodeInput.value = districtCodeInput.value.slice(0, maxLength);
            }
        });
    });
</script>
