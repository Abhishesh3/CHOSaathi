@model IEnumerable<CHO_Saathi.Models.Cho>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
  
    $(function () {
        $('#CHODetails').DataTable({
            dom: 'lBfrtip',
            buttons: ['excelHtml5'],
            'info': false,
            'lengthChange': false,
            'autoWidth': false
        });
    });
</script>

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-4">
                            <h4 class="Headingcolorbg">CHO Users</h4>
                        </div>
                        <div class="col-xl-4"></div>
                        <div class="col-xl-4">
                            <div class="float-end">
                                <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>&nbsp;Add New CHO</a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <table id="CHODetails" class="table table-striped table-bordered cell-border">
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            State
                                        </th>
                                        <th>
                                            District
                                        </th>
                                        <th>
                                            Block
                                        </th>
                                        <th>
                                            Facility
                                        </th>
                                        <th>
                                            Subfacility
                                        </th>
                                        <th>
                                            Mobile
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                         @{
                                           int a = 1;
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                                <td>@a</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Choname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Username)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.State.StateName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.District.District)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Block.BlockName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Facility.FacilityName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SubFacility.SubFacility)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MobileNo)
                                            </td>
                                           
                                            <td>
                                                @if (@item.IsActive == true)
                                                {
                                                    <div class="badge rounded-pill text-bg-success">Active</div>
                                                }
                                                else
                                                {
                                                    <div class="badge rounded-pill text-bg-danger">InActive</div>
                                                }
                                            </td>
                                            <td>
                                            <a asp-controller="CHOMapped" asp-action="Index" asp-route-id="@item.Choid" class="text-primary edicon" title="Location Mapped" data-toggle="tooltip" data-placement="bottom"><i class="fa-solid fa-earth-asia"></i></a>&nbsp;
                                            <a asp-action="Edit" asp-route-id="@item.Choid" class="text-success edicon" title="Edit" data-toggle="tooltip" data-placement="bottom"><i class="fa-solid fa-pen-to-square"></i></a>&nbsp;
                                            <a asp-action="Delete" asp-route-id="@item.Choid" class="text-danger edicon" title="Delete" data-toggle="tooltip" data-placement="bottom"><i class="fa-solid fa-trash" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                            a += 1;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

